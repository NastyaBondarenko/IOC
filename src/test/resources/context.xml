<beans>
    <bean id="mailServicePOP" class="com.bondarenko.ioc.testclasses.context.impl.MailServiceImpl">
        <property name="port" value="995"/>
        <property name="protocol" value="POP3"/>
    </bean>

    <bean id="userService" class="com.bondarenko.ioc.testclasses.context.impl.UserServiceImpl">
        <property name="mailService" ref="mailServicePOP"/>
    </bean>

    <bean id="mailServiceIMAP" class="com.bondarenko.ioc.testclasses.context.impl.MailServiceImpl">
        <property name="port" value="143"/>
        <property name="protocol" value="IMAP"/>
    </bean>

    <bean id="userServiceImap" class="com.bondarenko.ioc.testclasses.context.impl.UserServiceImpl">
        <property name="mailService" ref="mailServiceIMAP"/>
    </bean>

    <bean id="messageService" class="com.bondarenko.ioc.testclasses.processor.MessageService">
        <property name="port" value="4566"/>
        <property name="protocol" value="IMAP"/>
    </bean>

    <bean id="beanPostProcessor" class="com.bondarenko.ioc.testclasses.processor.CustomBeanPostProcessor"/>
    <bean id="beanFactoryPostProcessor" class="com.bondarenko.ioc.testclasses.processor.CustomBeanFactoryPostProcessor"/>
</beans>